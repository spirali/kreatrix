(isLoaded: #gtk) ifTrue: [ ^getModule: #gtk ].

loadCLibrary: "gtk".

Box do: {
	
	expand <- true.
	fill <- true.
	padding <- 0.

	packStart: = { :aWidget |
		packStart: aWidget expand: expand fill: fill padding: padding.
	}.

}.

Button do: {
	cloneWithLabel:onClick: = { :label :aBlock |
		|button|
		button << cloneWithLabel: label.
		button signal: "clicked" connect: aBlock.
		^button.
	}.
}.

registerAs: #gtk.
